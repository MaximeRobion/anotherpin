<div class="product">
  <%= link_to product_path(product) do %>
    <%= image_tag product.image_1.medium.url %>
  <% end %>

  <div class="product-title">
    <%= link_to product.title, product_path(product) %>
  </div>

  <div class="product-price">
    <p>
      <%= number_to_currency product.price_in_dollars %>
    </p>
  </div>
</div>
