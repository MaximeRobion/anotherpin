<h1>Checkout</h1>

<%= simple_form_for @order do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <%= f.input :country %>
  <%= f.input :address_1 %>
  <%= f.input :address_2 %>
  <%= f.input :city %>
  <%= f.input :postal_code %>

  <div id="card-errors"></div>
  <div id="card"></div>

  <%= f.button :submit, "Submit order" %>
<% end %>

<script>
  var stripe = Stripe("&lt;%= Rails.application.credentials.stripe[Rails.env.to_sym][:stripe_public_key] %&gt;")
  var elements = stripe.elements();

  var card = elements.create('card');
  card.mount("#card");

  $("form.new_order").on("submit", function (ev) {
    ev.preventDefault()

    stripe.createToken(card).then(function (result){

      if (result.error){
        $("#card-errors").html(result.error.message)
      } else {
        $("form.new_order").append("<input type=hidden name='order[stripe_token]' value=" + result.token.id + ">")
        $("form.new_order").get(0).submit()
      }
    })
  })
</script>
